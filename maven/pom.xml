<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>com.developmentontheedge.be5</groupId>
	<artifactId>be5-maven-plugin</artifactId>
	<version>0.1.0</version>
	<packaging>maven-plugin</packaging>
	<!--packaging>jar</packaging -->

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
	</properties>

	<name>be5-maven-plugin</name>
	<description>Maven plug-ins for be5</description>

	<!--parent> <groupId>com.developmentontheedge</groupId> <artifactId>be5</artifactId> 
		<version>0.0.2</version> </parent -->

	<dependencies>

		<dependency>
			<groupId>org.apache.maven</groupId>
			<artifactId>maven-plugin-api</artifactId>
			<version>3.0</version>
		</dependency>

		<dependency>
			<groupId>org.apache.maven.plugin-tools</groupId>
			<artifactId>maven-plugin-annotations</artifactId>
			<version>3.4</version>
			<scope>provided</scope>
		</dependency>

		<dependency>
			<groupId>com.developmentontheedge</groupId>
			<artifactId>be5-metadata</artifactId>
			<version>0.3.0</version>
		</dependency>

		<dependency>
			<groupId>com.developmentontheedge</groupId>
			<artifactId>dbms</artifactId>
			<version>0.1.0</version>
		</dependency>

		<!-- temp: for testing -->
		<dependency>
			<groupId>org.postgresql</groupId>
			<artifactId>postgresql</artifactId>
			<version>42.0.0</version>
		</dependency>

	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.3</version>
				<configuration>
					<source>1.8</source>
					<target>1.8</target>
				</configuration>
			</plugin>

			<plugin>
				<groupId>com.developmentontheedge.be5</groupId>
				<artifactId>be5-maven-plugin</artifactId>
				<version>0.1.0</version>
				<configuration>
				</configuration>
			</plugin>

			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-plugin-plugin</artifactId>
				<version>3.5</version>
				<configuration>
					<mojoDependencies></mojoDependencies>
				</configuration>
			</plugin>

		</plugins>
	</build>

</project>
